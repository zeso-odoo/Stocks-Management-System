 <odoo>
    <record id="stocks_manage_user_action" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">stocks.manage.user</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="stocks_manage_user_view_tree" model="ir.ui.view">
        <field name="name">stocks.manage.user.tree</field>
        <field name="model">stocks.manage.user</field>
        <field name="arch" type="xml">
            <tree string="User">
                <field name="name"/>
                <field name="description"/>
                <field name="pancard"/>
                <field name="email"/>
                <field name="no_of_stocks"/>
                <field name="total_PL"/>
            </tree>     
        </field>
    </record>
    <record id="stocks_manage_user_view_form" model="ir.ui.view">
        <field name="name">stocks.manage.user.form</field>
        <field name="model">stocks.manage.user</field>
        <field name="arch" type="xml">
            <form string="User">
                <sheet>
                    <div class="name">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <notebook>
                            <page string="user_details">
                                <group>
                                    <field name="pancard"/>
                                    <field name="email"/>
                                    <field name="no_of_stocks"/>
                                    <field name="total_pl"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>